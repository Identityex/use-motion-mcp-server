{
  "name": "motion-mcp-server",
  "version": "1.0.0",
  "description": "A Model Context Protocol (MCP) server for integrating with Motion task management platform",
  "main": "dist/server/index.js",
  "bin": {
    "motion-mcp-server": "dist/server/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/server/index.ts",
    "dev:ts-node": "ts-node src/server/index.ts",
    "start": "node dist/server/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mcp",
    "motion",
    "task-management",
    "ai",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@alexlafroscia/yaml-merge": "^4.1.0",
    "@modelcontextprotocol/sdk": "^1.15.1",
    "axios": "^1.10.0",
    "dotenv": "^17.2.0",
    "fs-extra": "^11.3.0",
    "gray-matter": "^4.0.3",
    "handlebars": "^4.7.8",
    "p-queue": "^8.1.0",
    "p-retry": "^6.2.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.0.14",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.31.0",
    "jest": "^30.0.4",
    "js-yaml": "^4.1.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
